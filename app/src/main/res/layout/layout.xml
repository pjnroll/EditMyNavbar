<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorItembg">

    <LinearLayout
        android:id="@+id/ll_allow_system_alert_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorItembg"
        android:padding="@dimen/item_padding"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tv_allow_system_alert_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_allow_system_alert_window"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_start_stop_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorItembg"
        android:layout_marginTop="@dimen/item_margin_top"
        android:padding="@dimen/item_padding"
        android:baselineAligned="false"
        android:layout_below="@id/ll_allow_system_alert_window">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_start_stop_service"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_start_stop_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/item_button_margin_top"
            android:text="@string/text_button"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_choose_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorItembg"
        android:layout_marginTop="@dimen/item_margin_top"
        android:padding="@dimen/item_padding"
        android:baselineAligned="false"
        android:layout_below="@id/ll_start_stop_service">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_choose_image"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/item_button_margin_top"
            android:text="@string/choose"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_choose_img"
        />

    <TextView
        android:id="@+id/txtBitmapPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/imageView"
        />

</RelativeLayout>
